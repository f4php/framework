{
    "name": "f4php/framework",
    "description": "F4 is a lightweight web development framework",
    "keywords": ["f4","framework"],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "F4\\": "src/F4"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "F4\\": "tests/F4"
        }
    },
    "authors": [
        {
            "name": "Dennis Kreminsky",
            "email": "dennis@kreminsky.com"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "allow-plugins": {
            "nodejs-php-fallback/nodejs-php-fallback": true
        }
    },
    "scripts": {
        "test": "phpunit --bootstrap tests/F4/Config.php --display-warnings --display-phpunit-deprecations --fail-on-deprecation tests",
        "stan": "phpstan --level=3 analyse src tests"
    },
    "require": {
        "ext-filter": "*",
        "ext-mbstring": "*",
        "ext-pgsql": "*",
        "guzzlehttp/guzzle": "^7.9",
        "phug/phug": "^1.13",
        "phug/component": "^1.1",
        "php": "^8.4.1",
        "cekurte/environment": "^0.3.0",
        "ralouphie/getallheaders": "^3.0",
        "nyholm/psr7": "^1.8",
        "nette/php-generator": "^4.1",
        "composer/pcre": "^3.3",
        "nyholm/psr7-server": "^1.1",
        "spatie/backtrace": "^1.7",
        "jrmajor/fluent": "^1.1",
        "f4php/db": "^0.2.3",
        "f4php/hookmanager": "^0.0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    }
}
